<?xml version="1.0" encoding="ISO-8859-1"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
   xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
   version="2.5">
  <servlet>
    <servlet-name>exceed</servlet-name>
    <servlet-class>knt.exceedvote.controller.Controller</servlet-class>
  </servlet>
 
 	
<security-constraint>
    <web-resource-collection>
        <web-resource-name>securedapp</web-resource-name>
        <url-pattern>/*</url-pattern>
    </web-resource-collection>
    <user-data-constraint>
        <transport-guarantee>CONFIDENTIAL</transport-guarantee>
    </user-data-constraint>
</security-constraint>
 
  <servlet-mapping>
    <servlet-name>exceed</servlet-name>
    <url-pattern>/jsp/addtext</url-pattern>
  </servlet-mapping>
  
    <servlet-mapping>
    <servlet-name>exceed</servlet-name>
    <url-pattern>/jsp/login</url-pattern>
  </servlet-mapping>
  
      <servlet-mapping>
    <servlet-name>exceed</servlet-name>
    <url-pattern>/jsp/pollchoose</url-pattern>
  </servlet-mapping>
  
        <servlet-mapping>
    <servlet-name>exceed</servlet-name>
    <url-pattern>/jsp/vote</url-pattern>
  </servlet-mapping>
     <servlet-mapping>
     
    <servlet-name>exceed</servlet-name>
    <url-pattern>/jsp/register</url-pattern>
  </servlet-mapping>
</web-app>